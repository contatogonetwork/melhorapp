{
  "app": {
    "name": "GoNetwork AI",
    "version": "1.0.0",
    "language": "pt-BR",
    "theme": "dracula",
    "startup_widget": "dashboard"
  },
  "database": {
    "engine": "sqlite",
    "path": "data/gonetwork.db"
  },
  "logging": {
    "level": "INFO",
    "file": "logs/gonetwork.log",
    "format": "[%(asctime)s] %(levelname)s - %(message)s"
  },
  "features": {
    "enable_accessibility": true,
    "enable_dark_mode": true,
    "enable_telemetry": false
  },
  "accessibility": {
    "font_size": "medium",
    "color_scheme": "high_contrast"
  },
  "documentation": {
    "sphinx_path": "docs/sphinx",
    "build_command": "make html"
  },
  "tests": {
    "enabled": true,
    "framework": "pytest",
    "paths": [
      "tests/gui/widgets",
      "tests/database"
    ]
  }
}
